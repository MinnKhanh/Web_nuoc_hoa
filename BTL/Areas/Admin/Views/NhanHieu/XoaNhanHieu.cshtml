@model BTL.Models.NHANHIEU

@{
    ViewBag.Title = "XoaNhanHieu";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutShop.cshtml";
}

<div class="container">
    <h2 style="text-align: center">Xóa nhãn hiệu</h2>

    <h3 style="text-align: center">Bạn có chắc muốn xóa nhãn hiệu này không?</h3>
    <div>
        <h4 style="text-align: center">Nhãn hiệu xóa</h4>
        <hr />
        <div class="col-md-offset-4 col-md-10">
            <dl class="dl-horizontal">
                <dt>
                    Tên nhãn hiệu:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.TenNhanHieu)
                </dd>

                <dt>
                    Email:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Email)
                </dd>

                <dt>
                    Xuất xứ:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.XuatXu)
                </dd>

            </dl>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="col-md-offset-5 col-md-10">
                <input type="submit" value="Xóa " class="btn btn-default" />

            </div>
        }
    </div>
</div>