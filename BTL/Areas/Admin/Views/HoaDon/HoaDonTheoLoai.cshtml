@model IEnumerable<BTL.Models.CT_HOADONBAN>

@{
    Layout = null;
}

<div class="container">
    <h4>Hóa đơn theo loại</h4>
    <table class="table">
        <tr>
            <th>
                Số lượng
            </th>
            <th>
                Đơn giá
            </th>
            <th>
                Thành tiền
            </th>
            <th>
                Mã hóa đơn
            </th>
            <th>
                Tên sản phẩm
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SoLuongBan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DonGiaBan)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.ThanhTienBan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HOADONBAN.MaHoaDonBan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SANPHAM.TenSP)
                </td>
            </tr>
        }

    </table>
</div>