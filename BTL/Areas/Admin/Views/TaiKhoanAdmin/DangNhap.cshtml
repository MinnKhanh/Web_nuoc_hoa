@model BTL.Models.KHACHHANG

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Đăng nhập</title>

    <!-- Meta-Tags -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">
    <meta name="keywords" content="Spin Login Form a Responsive Web Template, Bootstrap Web Templates, Flat Web Templates, Android Compatible Web Template, Smartphone Compatible Web Template, Free Webdesigns for Nokia, Samsung, LG, Sony Ericsson, Motorola Web Design">
    <script>
        addEventListener("load", function () {
            setTimeout(hideURLbar, 0);
        }, false);

        function hideURLbar() {
            window.scrollTo(0, 1);
        }
    </script>
    <!-- //Meta-Tags -->
    <!-- Stylesheets -->
    <link href="/Resource/DangNhap/css/font-awesome.css" rel="stylesheet">
    <link href="/Resource/DangNhap/css/style.css" rel='stylesheet' type='text/css' />
    <!--// Stylesheets -->
    <!--fonts-->
    <link href="//fonts.googleapis.com/css?family=Source+Sans+Pro:200,200i,300,300i,400,400i,600,600i,700,700i,900,900i&amp;subset=cyrillic,cyrillic-ext,greek,greek-ext,latin-ext,vietnamese" rel="stylesheet">
    <!--//fonts-->
</head>
<body>

    <!--Giao diện template có sẵn-->

<div class="clear-loading spinner">
    <span></span>
</div>
    <p style="font-size: 150%; color: #fa3253">Đăng nhập dành cho Admin</p>
    <div class="w3ls-login box box--big">
        <!-- form starts here -->
        <form action="#" method="post">
            <div class="agile-field-txt">
                <label style="color: #fa3253"><i class="fa fa-user" aria-hidden="true"></i> Tên tài khoản </label>
                @*<input type="text" name="name" placeholder="Enter User Name" required="" />*@
                @Html.EditorFor(model => model.TenTaiKhoan, new { htmlAttributes = new { @type = "text", @name = "name", @placeholder = "Enter User Name", @required = "" } })
            </div>
            <div class="agile-field-txt">
                <label style="color: #fa3253"><i class="fa fa-unlock-alt" aria-hidden="true"></i> Mật khẩu </label>
                @*<input type="password" name="password" placeholder="Enter Password" required="" id="myInput" />*@
                @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @type = "password", @name = "password", @placeholder = "Enter Password", @required = "", @id = "myInput" } })
                <div class="agile_label">
                    <input id="check3" name="check3" type="checkbox" value="show password" onclick="myFunction()">
                    <label class="check" for="check3" style="color: #fa3253">Xem mật khẩu</label>
                </div>
                <div class="agile-right">
                    <a href="/User/TaiKhoanUser/DangNhap" style="color: #fa3253">Chuyển sang đăng nhập User</a>
                </div>

                <div class="agile_label">
                    <label class="check" for="check3" style="color: #fa3253">@ViewBag.DangNhapSai</label>
                </div>
            </div>
            <!-- script for show password -->
            <script>
            function myFunction() {
                var x = document.getElementById("myInput");
                if (x.type === "password") {
                    x.type = "text";
                } else {
                    x.type = "password";
                }
            }
            </script>
            <!-- //end script -->
            <input type="submit" value="Đăng nhập Admin">
        </form>
    </div>

    <div class="copy-wthree">
        <p style="color:deeppink">
            Cửa hàng nước hoa đạt chuẩn quốc tế sẽ mang bạn tới với thế giới của mùi hương
        </p>
    </div>

    <div>

    </div>
</body>
</html>
