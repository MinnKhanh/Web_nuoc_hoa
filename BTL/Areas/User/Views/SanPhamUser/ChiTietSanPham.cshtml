</section>
<script>
    $.ajax({
        url: "https://localhost:44346/ChiTietSanPham?MaSP="+@ViewBag.MaSp,
        method: 'GET',
        success: function (response) {
            $(".anhsp").attr("src", `../../Resource/SanPham/${response.AnhSanPham}`)
            $("#tensp").text(`Nước hoa: ${response.TenSP}`)
            $("#giasp").text(`Giá: ${response.DonGia} VNĐ`)
            $("#dungtich").text(`Dung tích: ${response.DungTich} ml`)
            $("#mota").text(`${response.MoTaSanPham}`)
        }
    });
    $("#Themsanpham").click(function (e) {
        console.log("chay")
        let masp = e.target.getAttribute("data-id")
        e.preventDefault()
                console.log("/User/GioHang/ThemGioHang?sMaSp=" + masp)
                $.ajax({
                    url: "/User/GioHang/ThemGioHang?sMaSp=" + masp,
                    method: 'GET',
                    success: function (response) {
                        console.log($("#soluongaddgiohang"))
                        document.getElementById("soluongaddgiohang").innerHTML = response
                    },
                    error: function (response) {
                    }
                });

    })
</script>





